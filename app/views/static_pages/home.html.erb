<div class="home-image f-topbar-fixed">
  <div class="row">
    <div class="medium-12 columns">
      <div class="logo-wrapper">
        <%= image_tag "logo.svg", alt: "Thrive Logo", class: "logo" %>
      </div>
      <h2 class="uvp">Cultivating community by growing affordable local produce and sharing ideas for healthy living.</h2>
      <%= link_to "Learn More", "#about", class: "button radius learn-more smooth" %>
    </div>
  </div>
</div>
<div class="section black about", id="about">
  <div class="row">
    <div class="medium-5 columns center">
      <%= image_tag "cultivating.svg", class: "icon" %>
    </div>
    <div class="medium-7 columns">
      <h3 class="white">Helping our neighbors</h3>
      <p class="white">
        The Thrive Neighborhood Market & Community Garden provides affordable fresh produce to our community through our monthly farmers markets and community garden located at St. Paul's Episcopal Chucrch in DeKalb, IL.
      </p>
      <div class="arrow-down">
        <%= link_to "#community", class: "smooth arrow-down" do %>
          <span class="fa-stack fa-2x">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-angle-down fa-stack-1x"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="section about dashed-border", id="community">
  <div class="row">
    <div class="medium-5 medium-push-7 columns center">
      <%= image_tag "community_garden.svg", class: "icon" %>
    </div>
    <div class="medium-7 medium pull-5 columns">
      <h3>Community supported</h3>
      <p>
