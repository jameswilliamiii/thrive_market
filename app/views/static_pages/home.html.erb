<div class="section about dashed-border", id="when">
  <div class="row">
    <div class="large-12 small-8 small-centered medium-8 medium-centered columns center">
      <h3 class="center">Market Dates</h3>
      <div class="dates">
        <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-4">
          <li>
            <div class="month radius">
              <p>June</p>
            </div>
            <div class="day">
              <p>28</p>
              <small>11AM - 2PM</small>
            </div>
          </li>
          <li>
            <div class="month radius">
              <p>July</p>
            </div>
            <div class="day">
              <p>26</p>
              <small>11AM - 2PM</small>
            </div>
          </li>
          <li>
            <div class="month radius">
              <p>Aug</p>
            </div>
            <div class="day">
              <p>23</p>
              <small>11AM - 2PM</small>
            </div>
          </li>
          <li>
            <div class="month radius">
              <p>Sept</p>
            </div>
            <div class="day">
              <p>27</p>
              <small>11AM - 2PM</small>
            </div>
          </li>
        </ul>
      </div>
      <h3 class="center">Enter your phone number to receive SMS updates</h3>
      <%= form_tag "sms_updates" do %>
        <div class="phone-wrapper">
          <div class="row">
            <div class="medium-7 columns">
              <%= telephone_field_tag :number, nil, placeholder: "XXX-XXX-XXXX", class: "large-font" %>
            </div>
            <div class="medium-5 small-12 columns end">
              <%= submit_tag "SIGN UP", class: "button learn-more radius expand" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
