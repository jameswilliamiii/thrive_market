<% if notice.present? || alert.present? %>
  <div class="message-wrapper">
    <div class="row">
      <div class="medium-12 columns">
        <% if notice.present? %>
          <div data-alert class="alert-box success">
            <%= notice %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>
        <% if alert.present? %>
          <div data-alert class="alert-box alert">
            <%= alert %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>